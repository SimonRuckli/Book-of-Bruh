<UserControl x:Class="BookOfBruh.View.Slot.SlotView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:slot="clr-namespace:BookOfBruh.View.Slot"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             d:DataContext="{d:DesignInstance slot:SlotViewModel}">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>

            <Image
                Grid.Row="0" 
                Grid.Column="0"
                Style="{StaticResource SymbolImage}"
                Source="{Binding Symbol00}" />

            <Image
                Grid.Row="0" 
                Grid.Column="1"
                Style="{StaticResource SymbolImage}"
                Source="{Binding Symbol10}" />

            <Image
                Grid.Row="0" 
                Grid.Column="2"
                Style="{StaticResource SymbolImage}"
                Source="{Binding Symbol20}" />

            <Image
                Grid.Row="0" 
                Grid.Column="3"
                Style="{StaticResource SymbolImage}"
                Source="{Binding Symbol30}" />

            <Image
                Grid.Row="0" 
                Grid.Column="4"
                Style="{StaticResource SymbolImage}"
                Source="{Binding Symbol40}" />


            <Image
                Grid.Row="1" 
                Grid.Column="0"
                Style="{StaticResource SymbolImage}"
                Source="{Binding Symbol01}" />

            <Image
                Grid.Row="1" 
                Grid.Column="1"
                Style="{StaticResource SymbolImage}"
                Source="{Binding Symbol11}" />

            <Image
                Grid.Row="1" 
                Grid.Column="2"
                Style="{StaticResource SymbolImage}"
                Source="{Binding Symbol21}" />

            <Image
                Grid.Row="1" 
                Grid.Column="3"
                Style="{StaticResource SymbolImage}"
                Source="{Binding Symbol31}" />

            <Image
                Grid.Row="1" 
                Grid.Column="4"
                Style="{StaticResource SymbolImage}"
                Source="{Binding Symbol41}" />


            <Image
                Grid.Row="2" 
                Grid.Column="0"
                Style="{StaticResource SymbolImage}"
                Source="{Binding Symbol02}" />

            <Image
                Grid.Row="2" 
                Grid.Column="1"
                Style="{StaticResource SymbolImage}"
                Source="{Binding Symbol12}" />

            <Image
                Grid.Row="2" 
                Grid.Column="2"
                Style="{StaticResource SymbolImage}"
                Source="{Binding Symbol22}" />

            <Image
                Grid.Row="2" 
                Grid.Column="3"
                Style="{StaticResource SymbolImage}"
                Source="{Binding Symbol32}" />

            <Image
                Grid.Row="2" 
                Grid.Column="4"
                Style="{StaticResource SymbolImage}"
                Source="{Binding Symbol42}" />

    </Grid>
</UserControl>
